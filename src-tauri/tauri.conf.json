{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "bootauri",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["settings.json"]
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "setFullscreen": true,
        "startDragging": true
      }
    },
    "windows": [
      {
        "title": "bootauri",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "dangerousUseHttpScheme": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "io.github.toyota32k.bootauri",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
